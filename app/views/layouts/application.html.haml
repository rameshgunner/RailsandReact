!!!HTML
%head
	%title Cloud Restro
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	%link{:rel => "stylesheet", :href => "/assets/stylesheets/normalize.min.css"}
	%link{:rel => "stylesheet", :href => "/assets/stylesheets/font-awesome.min.css"}
	= csrf_meta_tags

%body
	%header
		.wrapper.clearfix
			#logo
				= link_to image_tag("restura.png"), root_path
			%nav
				- if user_signed_in?
					Welcome,	
					= link_to current_user.username, edit_user_registration_path
					= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'button'
				- else
					= link_to "Sign In", new_user_session_path, class: "button"
					= link_to "Sign Up", new_user_registration_path, class: "button"
	%p.notice= notice
	%p.alert= alert
	.wrapper
		= yield