= react_component 'Main'

.index-intro-in
	%br
	.index-intro-button
		= link_to "Add Team Members	", new_post_path, class: "button"

#posts
	- @post.each do |post|
		.post
			.post_image
				= link_to image_tag post.avatar.url(:thumb).to_s
			.post_content
				.title
					%h2= link_to post.name, post
				.data.clearfix
					%p.username
						Status: 
						= post.status
				.data.clearfix
					.btn.btn-primary
						= link_to "View	",post
